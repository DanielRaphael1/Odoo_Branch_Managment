<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- CRM Lead Form View -->
        <record id="crm_lead_view_form_inherit_branch" model="ir.ui.view">
            <field name="name">crm.lead.form.inherit.branch</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Branch Information" groups="branch_management.group_branch_manager">
                        <group>
                            <field name="branch_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- CRM Lead Tree View -->
        <record id="crm_lead_view_tree_inherit_branch" model="ir.ui.view">
            <field name="name">crm.lead.tree.inherit.branch</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="branch_id" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- CRM Lead Search View -->
        <record id="crm_lead_view_search_inherit_branch" model="ir.ui.view">
            <field name="name">crm.lead.search.inherit.branch</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='assigned_to_me']" position="after">
                    <separator/>
                    <filter string="Branch" name="branch" context="{'group_by': 'branch_id'}"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter string="Branch" name="branch_id" context="{'group_by': 'branch_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 