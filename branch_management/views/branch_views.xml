<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Branch Form View -->
        <record id="view_branch_form" model="ir.ui.view">
            <field name="name">branch.branch.form</field>
            <field name="model">branch.branch</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_users" type="object" class="oe_stat_button" icon="fa-users">
                                <field name="user_count" widget="statinfo" string="Users"/>
                            </button>
                            <button name="action_view_partners" type="object" class="oe_stat_button" icon="fa-user">
                                <field name="partner_count" widget="statinfo" string="Customers"/>
                            </button>
                            <button name="action_view_employees" type="object" class="oe_stat_button" icon="fa-id-card">
                                <field name="employee_count" widget="statinfo" string="Employees"/>
                            </button>
                            <button name="action_view_leads" type="object" class="oe_stat_button" icon="fa-lightbulb-o">
                                <field name="lead_count" widget="statinfo" string="Leads"/>
                            </button>
                            <button name="action_view_events" type="object" class="oe_stat_button" icon="fa-calendar">
                                <field name="event_count" widget="statinfo" string="Events"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Branch Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="manager_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Branch List View (formerly Tree) -->
        <record id="view_branch_list" model="ir.ui.view">
            <field name="name">branch.branch.list</field>
            <field name="model">branch.branch</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="manager_id"/>
                </list>
            </field>
        </record>

        <!-- Branch Search View -->
        <record id="view_branch_search" model="ir.ui.view">
            <field name="name">branch.branch.search</field>
            <field name="model">branch.branch</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="manager_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" name="branch" context="{'group_by': 'name'}"/>
                        <filter string="Manager" name="manager" context="{'group_by': 'manager_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Branch Action -->
        <record id="action_branch" model="ir.actions.act_window">
            <field name="name">Branches</field>
            <field name="res_model">branch.branch</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first branch!
                </p>
            </field>
        </record>

        <!-- Branch Employees Action -->
        <record id="action_branch_employees" model="ir.actions.act_window">
            <field name="name">Branch Employees</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr.view_employee_tree"/>
            <field name="search_view_id" ref="hr.view_employee_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No employees found in this branch.
                </p>
            </field>
        </record>

        <!-- Branch Users Action -->
        <record id="action_branch_users" model="ir.actions.act_window">
            <field name="name">Branch Users</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="branch_management.view_users_tree_inherit_branch"/>
            <field name="search_view_id" ref="branch_management.view_users_search_inherit_branch"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No users found in this branch.
                </p>
            </field>
        </record>

        <!-- Branch Partners Action -->
        <record id="action_branch_partners" model="ir.actions.act_window">
            <field name="name">Branch Partners</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="branch_management.view_partner_tree_inherit_branch"/>
            <field name="search_view_id" ref="branch_management.view_partner_search_inherit_branch"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No partners found in this branch.
                </p>
            </field>
        </record>

        <!-- Branch Leads Action -->
        <record id="action_branch_leads" model="ir.actions.act_window">
            <field name="name">Branch Leads</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="branch_management.crm_lead_view_tree_inherit_branch"/>
            <field name="search_view_id" ref="branch_management.crm_lead_view_search_inherit_branch"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No leads found in this branch.
                </p>
            </field>
        </record>

        <!-- Branch Events Action -->
        <record id="action_branch_events" model="ir.actions.act_window">
            <field name="name">Branch Events</field>
            <field name="res_model">calendar.event</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="branch_management.view_calendar_event_tree_inherit_branch"/>
            <field name="search_view_id" ref="branch_management.view_calendar_event_search_inherit_branch"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No events found in this branch.
                </p>
            </field>
        </record>
    </data>
</odoo> 