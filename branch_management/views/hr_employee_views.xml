<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Employee Form View -->
        <record id="hr_employee_view_form_inherit_branch" model="ir.ui.view">
            <field name="name">hr.employee.form.inherit.branch</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Branch Information" groups="branch_management.group_branch_manager">
                        <group>
                            <field name="branch_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Employee Tree View -->
        <record id="hr_employee_view_tree_inherit_branch" model="ir.ui.view">
            <field name="name">hr.employee.tree.inherit.branch</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="branch_id" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Employee Search View -->
        <record id="hr_employee_view_search_inherit_branch" model="ir.ui.view">
            <field name="name">hr.employee.search.inherit.branch</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='my_department']" position="after">
                    <separator/>
                    <filter string="Branch" name="branch" context="{'group_by': 'branch_id'}"/>
                </xpath>
                <xpath expr="//group" position="inside">
                    <filter string="Branch" name="branch_id" context="{'group_by': 'branch_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 