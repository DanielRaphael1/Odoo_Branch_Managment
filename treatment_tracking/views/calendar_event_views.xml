<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_calendar_event_form_inherit_treatment" model="ir.ui.view">
        <field name="name">calendar.event.form.inherit.treatment</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']/.." position="after">
                <field name="treatment_type_id" required="1"/>
                <field name="treatment_done"/>
                <field name="sale_order_line_id" readonly="1"/>
                <field name="invoice_id" readonly="1"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_mark_treatment_done" 
                        string="סמן טיפול כהושלם" 
                        type="object" 
                        class="btn-primary"
                        invisible="treatment_done"/>
            </xpath>
        </field>
    </record>

    <record id="view_calendar_event_tree_inherit_treatment" model="ir.ui.view">
        <field name="name">calendar.event.tree.inherit.treatment</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="treatment_type_id"/>
                <field name="treatment_done"/>
            </xpath>
        </field>
    </record>
</odoo> 