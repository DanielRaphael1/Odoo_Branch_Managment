<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_line_tree_inherit_treatment" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherit.treatment</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="product_uom_qty" position="after">
                <field name="treatment_type_id"/>
                <field name="treatments_completed"/>
                <field name="remaining_treatments"/>
            </field>
        </field>
    </record>

    <record id="view_order_form_inherit_treatment" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.treatment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="widget">section_and_note_one2many</attribute>
            </xpath>
        </field>
    </record>
</odoo> 