<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_treatment_type_form" model="ir.ui.view">
        <field name="name">treatment.type.form</field>
        <field name="model">treatment.type</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_treatment_type_tree" model="ir.ui.view">
        <field name="name">treatment.type.tree</field>
        <field name="model">treatment.type</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <record id="action_treatment_type" model="ir.actions.act_window">
        <field name="name">סוגי טיפולים</field>
        <field name="res_model">treatment.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                צור סוג טיפול חדש
            </p>
        </field>
    </record>
</odoo> 